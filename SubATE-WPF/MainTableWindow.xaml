<Window x:Class="SubATE_WPF.MainTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Add row" Click="AddRow_OnClick"/>
                <MenuItem Header="Edit row" Click="EditRow_OnClick"/>
            </MenuItem>
            <MenuItem Header="About"/>
        </Menu>
        <DataGrid Name="SubscribersDataGrid" Grid.Row="1" AutoGenerateColumns="True" ItemsSource="{Binding SubscribersTable}" IsReadOnly="True" />
    </Grid>
</Window>
